.bubble-wrap {
  position: relative;
}
.wait-point {
  display: inline-block;
  width: 6rpx;
  height: 6rpx;
  border-radius: 3rpx;
  background-color: #dddddd;
  margin: 0 2rpx;
}

.loading {
  position: relative;
}

.create-time {
  font-size: 28rpx;
  color: #B2B2B2;
  margin-top: 10rpx;
  margin-bottom: 10rpx;
  display: flex;
  display: -webkit-flex;
  justify-content: center;
  -webkit-justify-content: center;
}

.section-body{
  word-wrap: break-word;
  position: relative;
  width: 100%;
  display: flex;
  display: -webkit-flex;
  flex-direction: column;
  align-items: center;
}

.send-message{
  align-self: flex-end;
  flex-direction: row-reverse;
  background-color: #006EFF;
  color: #FFFFFF;
  margin-right: 20rpx;
  word-wrap: break-word;
  border-radius: 0rpx;
  border-bottom-right-radius: 40rpx;
  border-top-left-radius: 40rpx;
  border-bottom-left-radius: 40rpx;
  max-width: 70%;
}

.answer-message{
  align-self: flex-start;
  flex-direction: row;
  margin-top: 20rpx;
  background-color: #FFFFFF;
  color: #333333;
  margin-left: 20rpx;
  word-wrap: break-word;
  border-radius: 0rpx;
  border-bottom-right-radius: 40rpx;
  border-bottom-left-radius: 40rpx;
  border-top-right-radius: 40rpx;
  max-width: 70%;
}

.text-content {
  position: relative;
  padding: 20rpx;
  font-size: 32rpx;
}

.modal-wrap {
  position: absolute;
  width: 100%;
  box-sizing: border-box;
}


.msg-content {
  display: inline-block;
  -webkit-box-sizing: border-box;
  box-sizing: border-box;
  padding: 10px;
  background-color: #F3F3F3;
  font-size: 14px;
  color: #000;
  line-height: 24px;
  border-radius: 2px;
  word-break: break-all;
  max-width: 100%;
}

.recommend-list .dt {
  border-bottom: 1px solid #E2E2E2;
  min-width: 230px;
  padding-bottom: 10px;
  margin-bottom: 10px;
}

.recommend-list .dd {
  position: relative;
  line-height: 22px;
  padding-left: 0;
}

.recommend-list .dd .a {color:#3399ea;}

.recommend-list .dd::before {
  display: none;
}